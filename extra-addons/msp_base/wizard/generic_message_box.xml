<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="generic_message_box_form_view" model="ir.ui.view">
            <field name="name">generic.message.box.form</field>
            <field name="model">generic.message.box</field>
            <field name="arch" type="xml">
                <form string="Message">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="title" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="message_text" nolabel="1" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Close" special="cancel" class="btn-primary"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>