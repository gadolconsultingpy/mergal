<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_payment_register_form" model="ir.ui.view">
            <field name="name">account.payment.register.form</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='journal_id']" position="before">
                    <field name="payment_form_type" invisible="1"/>
                    <field name="payment_form_id"
                           domain="[('use_customer', '=', True)]"
                           invisible="partner_type != 'customer' "
                           options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"/>
                    <field name="payment_form_id"
                           domain="[('use_supplier', '=', True)]"
                           invisible="partner_type != 'supplier' "
                           options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"/>
                </xpath>
                <xpath expr="//group[@name='group2']" position="after">
                    <group name="bank_group" invisible="payment_form_type != 'bank'" string="Transfer Information">
                        <field name="payment_bank_id"/>
                        <field name="transfer_number"/>
                    </group>
                </xpath>

                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name='options'>{'no_open': True, 'no_create': True, 'no_open_create': True}</attribute>
                    <!--
                    <attribute name='readonly'>True</attribute>
                    <attribute name='force_save'>True</attribute>
                    -->
                </xpath>
                <!--
                <xpath expr="//field[@name='payment_method_line_id']" position="attributes">
                    <attribute name='readonly'>True</attribute>
                    <attribute name='force_save'>True</attribute>
                </xpath>
                -->
            </field>
        </record>
    </data>
</odoo>