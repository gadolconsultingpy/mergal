<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_account_payment_form" model="ir.ui.view">
            <field name="name">account.payment.form.view</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="msp_account_payment.view_account_payment_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='general_page']" position="inside">
                    <group name="payment_form_bank_group" string="Transfer Information"
                           invisible="payment_form_type != 'bank'">
                        <field name="require_number" invisible="True"/>
                        <field name="payment_bank_id" required="payment_form_type == 'bank'"/>
                        <field name="transfer_number"
                               readonly="state != 'draft' "
                               required="payment_form_type == 'bank' and require_number == True"/>
                    </group>
                </xpath>
                <xpath expr="//field[@name='journal_id']" position="before">
                    <field name="payment_form_type" invisible="1"/>
                    <field name="payment_form_id"
                           invisible="payment_type != 'inbound' "
                           readonly="state != 'draft'"
                           domain="[('use_customer','=',True),('company_id','=',company_id)]"
                           options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>
                    <field name="payment_form_id"
                           invisible="payment_type != 'outbound' "
                           readonly="state != 'draft'"
                           domain="[('use_supplier','=',True),('company_id','=',company_id)]"
                           options="{'no_create':True,'no_create_edit':True,'no_open':True}"/>

                </xpath>
                <xpath expr="//page[@name='general_page']/group/group[@name='left_group']" position="inside">
                    <field name="move_payment_form_id" readonly="1" force_save="1"/>
                </xpath>
                <xpath expr="//field[@name='journal_id']" position="attributes">
                    <attribute name='options'>{'no_open': True, 'no_create': True, 'no_open_create': True}</attribute>
                    <!--
                    <attribute name='readonly'>True</attribute>
                    <attribute name='force_save'>True</attribute>
                    -->
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="invoice_page" string="Invoices">
                        <div>
                            <field name="reconciled_invoice_ids" nolabel="1" invisible="payment_type != 'inbound' "/>
                            <field name="reconciled_bill_ids" nolabel="1" invisible="payment_type != 'outbound' "/>
                        </div>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>