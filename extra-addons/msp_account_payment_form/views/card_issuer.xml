<odoo>
    <data>
        <record id="card_issuer_list" model="ir.ui.view">
            <field name="name">card.issuer.list</field>
            <field name="model">card.issuer</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Card Issuer">
                    <field name="name"/>
                    <field name="code"/>
                </list>
            </field>
        </record>

        <record id="card_issuer_form" model="ir.ui.view">
            <field name="name">card.issuer.form</field>
            <field name="model">card.issuer</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Card Issuer">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="partner_id"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>