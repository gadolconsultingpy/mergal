<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="msp_account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page name="payment_form_page" string="Payment Forms"
                          invisible="require_cash_payment == False">
                        <field name="require_cash_payment" invisible="1"/>
                        <field name="currency_id" invisible="1"/>
                        <group>
                            <group>
                                <field name="amount_total_signed"/>
                                <field name="payment_total"/>
                                <field name="company_currency_id"/>
                            </group>
                            <group>
                                <field name="amount_total" string="Invoice Total"/>
                                <button name="action_payment_auto"
                                        string="Authomatic Payment"
                                        type="object" class="btn-primary"/>
                            </group>
                        </group>
                        <field name="payment_form_ids" context="{'default_currency_id':currency_id}"
                               readonly="state != 'draft' ">
                            <list>
                                <field name="require_number" invisible="1"/>
                                <field name="require_bank" invisible="1"/>
                                <field name="require_issuer" invisible="1"/>
                                <field name="require_date" invisible="1"/>
                                <field name="require_postdated_date" invisible="1"/>

                                <field name="payment_form_id"/>
                                <field name="payment_form_type" optional="hide"/>
                                <field name="bank_id" readonly="payment_form_type != 'bank' " optional="hide"/>
                                <field name="issuer_id" readonly="payment_form_type != 'bank' " optional="hide"/>
                                <field name="number"
                                       readonly="require_number != True "
                                       optional="hide"/>
                                <field name="date" optional="hide"/>
                                <field name="postdated_date" optional="hide"/>
                                <field name="payment_amount" optional="hide"/>
                                <field name="payment_currency_id"/>
                                <field name="payment_currency_rate"/>
                                <field name="amount" sum="Payment Total"/>
                                <field name="company_currency_id" optional="hide"/>
                            </list>
                            <form>
                                <group>
                                    <group string="Payment">
                                        <field name="payment_form_type" invisible="1"/>
                                        <field name="payment_form_id" options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"/>
                                        <field name="payment_currency_id" options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"/>
                                        <field name="payment_amount"/>
                                    </group>
                                    <group string="Applied to Invoice">
                                        <field name="payment_currency_rate"/>
                                        <field name="company_currency_id" readonly="1" force_save="1"/>
                                        <field name="amount" readonly="1" force_save="1"/>
                                    </group>
                                    <group>
                                        <field name="bank_id"/>
                                        <field name="issuer_id"/>
                                        <field name="number"/>
                                        <field name="date"/>
                                        <field name="postdated_date"/>
                                    </group>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_account_invoice_filter" model="ir.ui.view">
            <field name="name"></field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='groupy_by_journal']" position="after">
                    <filter name="group_by_payment_term" string="Payment Term" context="{'group_by':'invoice_payment_term_id'}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>