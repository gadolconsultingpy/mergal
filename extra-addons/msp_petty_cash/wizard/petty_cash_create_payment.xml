<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="petty_cash_create_payment_form" model="ir.ui.view">
        <field name="name">petty.cash.create.payment.form</field>
        <field name="model">petty.cash.create.payment</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group name="group_main">
                        <group name="group_left">
                            <field name="date"/>
                            <!--                            <field name="supplier_payment_form_id" string="Supplier Payment Form"-->
                            <!--                                   domain="[('use_supplier','=',True)]"-->
                            <!--                                   options="{'no_create':True, 'no_create_edit':True}"/>-->
                            <!--
                            <field name="journal_id" domain="[('type','in',['cash','bank'])]"/>
                            -->
                            <field name="journal_id" required="1" domain="[('type','in',['cash','bank'])]"/>
                            <field name="payment_type" invisible="1"/>
                            <field name="payment_method_line_id" domain="[('journal_id','=',journal_id),('payment_type','=',payment_type)]"/>
                            <field name="partner_id"
                                   required="1"
                                   domain="[('type','=','contact'),('is_company','=',False)]"/>
                            <field name="amount"
                                   required="1"
                                   invisible="origin == 'reposition'"/>

                        </group>
                        <group name="group_right">
                            <field name="petty_cash_type"/>
                            <field name="origin" readonly="1" force_save="1"/>
                            <field name="currency_id" readonly="1" force_save="1"/>
                            <field name="petty_cash_id" invisible="1"/>
                        </group>
                    </group>
                    <group colspan="4">
                        <field name="ref"/>
                    </group>
                    <notebook>
                        <page name="sheet_page" string="Sheets to Pay" invisible="origin in ['advance','opening'] ">
                            <field name="sheet_ids" nolabel="1" domain="[('petty_cash_id','=',petty_cash_id),('payment_state','=','unpaid')]">
                                <list>
                                    <field name="name"/>
                                    <field name="date"/>
                                    <field name="expense_partner_id"/>
                                    <field name="amount_total"/>
                                    <field name="currency_id" optional="hide"/>
                                    <field name="state" widget="badge"
                                           decoration-muted="state == 'draft' "
                                           decoration-warning="state == 'valid' "
                                           decoration-success="state == 'confirm' "/>
                                    <field name="sheet_balance" sum="Sheet Balance"/>
                                    <field name="payment_state" widget="badge"
                                           decoration-muted="payment_state == 'unpaid' "
                                           decoration-success="payment_state == 'paid' "/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>
                <footer>
                    <button name="create_payment" type="object" string="Create Payment" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>