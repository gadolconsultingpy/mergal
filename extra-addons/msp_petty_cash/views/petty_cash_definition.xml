<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="petty_cash_definition_kanban" model="ir.ui.view">
            <field name="name">petty.cash.definition.kanban</field>
            <field name="model">petty.cash.definition</field>
            <field name="arch" type="xml">
                <kanban sample="1">
                    <field name="name" invisible="1"/>
                    <field name="type" invisible="1"/>
                    <field name="amount" invisible="1"/>
                    <field name="progress" invisible="1"/>
                    <field name="balance_amount" invisible="1"/>
                    <field name="owner_id" invisible="1"/>
                    <field name="currency_id" invisible="1"/>
                    <templates>
                        <t t-name="card">
                            <div t-attf-class="oe_kanban_card ">
                                <div t-attf-class="o_kanban_card_header">
                                    <div class="o_kanban_card_header_title">
                                        <div class="o_primary">
                                            <h3>
                                                <a type="object" name="get_petty_cash_definition">
                                                    <strong><field name="name"/></strong>
                                                </a>
                                            </h3>
                                        </div>
                                    </div>
                                </div>
                                <div>
                                    <div class="oe_kanban_content ">
                                        <div class="oe_kanban_details">
                                            <div class="row ">
                                                <div class="col-6 o_kanban_primary_left">
                                                    <div>
                                                        <field name="type"/>
                                                    </div>
                                                    <div>
                                                        <field name="currency_id" invisible="1"/>
                                                        <field name="amount"/>
                                                    </div>
                                                    <div>
                                                        <field name="owner_id"/>
                                                    </div>
                                                </div>
                                                <div class="col-6 o_kanban_primary_right">
                                                    <div>
                                                        <strong>
                                                            <field name="balance_amount"/>
                                                        </strong>
                                                    </div>
                                                    <div>
                                                        <strong>
                                                            <field name="progress" widget="progressbar"/>
                                                        </strong>
                                                    </div>
                                                    <div style="margin-bottom:32px;">
                                                        <a type="object" name="open_sheets">
                                                            <strong>Sheets: <field name="sheet_ids"/></strong>
                                                        </a>
                                                    </div>
                                                    <button name="generate_sheet" type="object" string="Create Sheet" class="btn btn-primary">
                                                        <span>Create Sheet</span>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="petty_cash_definition_list" model="ir.ui.view">
            <field name="name">petty.cash.definition.list</field>
            <field name="model">petty.cash.definition</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Petty Cash Definition" sample="1">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="owner_id" optional="hide"/>
                    <field name="card_number" optional="hide"/>
                    <field name="opening_date"/>
                    <field name="amount" sum="Total Amount"/>
                    <field name="payments_amount" sum="Total Payments"/>
                    <field name="expenses_amount" sum="Total Expenses"/>
                    <field name="balance_amount" sum="Total Balance"/>
                    <field name="currency_id"/>
                    <field name="progress" widget="progressbar"/>
                </list>
            </field>
        </record>

        <record id="petty_cash_definition_form" model="ir.ui.view">
            <field name="name">petty.cash.definition.form</field>
            <field name="model">petty.cash.definition</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Petty Cash Definition">
                    <header>
                        <field name="fixed_fund_open" invisible="1"/>
                        <field name="has_sheet_to_replenish" invisible="1"/>
                        <field name="has_sheet_to_refund" invisible="1"/>
                        <field name="has_sheet_to_return" invisible="1"/>
                        <!-- FIXED FUND -->
                        <!-- FIXED FUND: Open False -->
                        <button name="generate_opening_payment"
                                type="object"
                                string="Create Opening"
                                invisible="type != 'fixed' or fixed_fund_open != False"
                                class="btn-primary"/>

                        <!-- FIXED FUND: Open True -->
                        <!-- FIXED FUND: No sheets -->
                        <button name="generate_sheet"
                                type="object"
                                string="Create Sheet"
                                invisible="type != 'fixed' or fixed_fund_open != True or has_sheet_to_replenish != False"
                                class="btn-primary"/>

                        <!-- FIXED FUND: Has sheets -->
                        <button name="generate_sheet"
                                type="object"
                                string="Create Sheet"
                                invisible="type != 'fixed' or fixed_fund_open != True or has_sheet_to_replenish != True"
                                class="btn-secondary"/>

                        <button name="generate_replenishment"
                                type="object"
                                string="Create Replenishment"
                                invisible="type != 'fixed' or fixed_fund_open != True or has_sheet_to_replenish != True"
                                class="btn-primary"/>

                        <!-- REPOSITION -->
                        <button name="generate_advance"
                                type="object"
                                string="Create Advance"
                                invisible="type != 'reposition'"
                                class="btn-primary"/>

                        <button name="generate_sheet"
                                type="object"
                                string="Create Sheet"
                                invisible="type != 'reposition'"
                                class="btn-primary"/>

                        <button name="generate_return_payment"
                                type="object"
                                string="Create Return"
                                invisible="type != 'reposition' or has_sheet_to_return != True"/>

                        <button name="generate_refund_payment"
                                type="object"
                                string="Create Refund"
                                invisible="type != 'reposition' or has_sheet_to_refund != True"/>

                        <!-- <button name="generate_reposition" type="object" string="Create Reposition" class="btn-primary"/>-->
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button"
                                    name="open_payments"
                                    icon="fa-files-o"
                                    type="object"
                                    invisible="payments_qty == False">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="payments_qty" widget="statinfo" nolabel="1" class="mr4"/>
                                    </span>
                                    <span class="o_stat_text">Payments</span>
                                </div>
                            </button>

                            <button class="oe_stat_button"
                                    name="open_sheets"
                                    icon="fa-files-o"
                                    context="{'search_default_unpaid':'1'}"
                                    type="object"
                                    invisible="sheets_qty == False">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value">
                                        <field name="sheets_qty" widget="statinfo" nolabel="1" class="mr4"/>
                                    </span>
                                    <span class="o_stat_text">Sheets</span>
                                </div>
                            </button>

                        </div>

                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="opening_date"/>
                                <field name="type"/>
                                <field name="petty_cash_journal_id" domain="[('type','=','cash')]"
                                       required="1"
                                       context="{'default_type':'cash', 'default_name':name}"/>
                                <field name="journal_id"
                                       required="1"
                                       domain="[('type','=','purchase')]"/>
                                <field name="account_id"/>
                                <field name="owner_id"/>
                            </group>
                            <group invisible="type not in ['fixed', 'card']">
                                <field name="amount" required="type == 'fixed'"/>
                                <field name="card_number" invisible="type != 'card'"/>
                            </group>
                            <group>
                                <field name="sheet_against_advance" invisible="type != 'reposition'"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="payments_page" string="Payments">
                                <field name="payment_ids">
                                    <list>
                                        <field name="date"/>
                                        <field name="name"/>
                                        <field name="partner_id"/>
                                        <field name="amount"/>
                                        <field name="state" widget="badge" decoration-info="state == 'draft'" decoration-success="state == 'posted'"/>
                                        <field name="currency_id"/>
                                        <field name="payment_type"/>
                                        <field name="amount_signed"/>
                                    </list>
                                </field>
                            </page>
                            <page name="sheets_page" string="Sheets">
                                <field name="sheet_ids">
                                    <list>
                                        <field name="name"/>
                                        <field name="date"/>
                                        <field name="expense_partner_id"/>
                                        <field name="amount_total"/>
                                        <field name="currency_id" optional="hide"/>
                                        <field name="state" widget="badge"
                                               decoration-muted="state == 'draft' "
                                               decoration-warning="state == 'valid' "
                                               decoration-success="state == 'confirm' "/>
                                        <field name="sheet_balance"/>
                                        <field name="payment_state" widget="badge"
                                               decoration-muted="payment_state == 'unpaid' "
                                               decoration-success="payment_state == 'paid' "/>
                                    </list>
                                </field>
                            </page>
                            <page name="other_page" string="Other Info">
                                <group>
                                    <field name="company_id" readonly="1" force_save="1"/>
                                    <field name="currency_id"/>
                                    <field name="fixed_fund_open_manual" groups="base.group_no_one"/>
                                </group>
                            </page>
                        </notebook>
                        <group>
                            <group>
                                <field name="amount" invisible="type != 'fixed'" readonly="1" force_save="1"/>
                                <field name="payments_amount" invisible="type == 'fixed'"/>
                                <field name="expenses_amount"/>
                                <field name="balance_amount"/>
                            </group>
                            <group></group>
                        </group>
                    </sheet>
                    <chatter reload_on_attachment="True"/>
                </form>
            </field>
        </record>

    </data>
</odoo>