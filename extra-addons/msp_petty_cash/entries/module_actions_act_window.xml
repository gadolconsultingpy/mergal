<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <!-- PETTY CASH DEFINITION MANAGER -->
        <record id="petty_cash_definition_manager_action" model="ir.actions.act_window">
            <field name="binding_type">action</field>
            <field name="context">{}</field>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="help"><![CDATA[Petty Cash Definition]]></field>
            <field name="name">Petty Cash Definition</field>
            <field name="res_model">petty.cash.definition</field>
            <field name="target">current</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">kanban,list,form</field>
        </record>
        <!-- PETTY CASH DEFINITION USER -->
        <record id="petty_cash_definition_user_action" model="ir.actions.act_window">
            <field name="binding_type">action</field>
            <field name="context">{}</field>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="help"><![CDATA[My Petty Cash]]></field>
            <field name="name">My Petty Cash</field>
            <field name="res_model">petty.cash.definition</field>
            <field name="target">current</field>
            <field name="domain">[('owner_id','=',uid)]</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">kanban,list,form</field>
        </record>
        <!-- PETTY CASH CONCEPT -->
        <record id="petty_cash_concept_action" model="ir.actions.act_window">
            <field name="binding_type">action</field>
            <field name="context">{}</field>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="help"><![CDATA[Petty Cash Concept]]></field>
            <field name="name">Petty Cash Concept</field>
            <field name="res_model">petty.cash.concept</field>
            <field name="target">current</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">list,form</field>
        </record>
        <!-- PETTY CASH SHEET -->
        <record id="petty_cash_sheet_action" model="ir.actions.act_window">
            <field name="binding_type">action</field>
            <field name="context">{'search_default_mysheets':"1"}</field>
            <field name="groups_id" eval="[(6, 0, [])]"/>
            <field name="help"><![CDATA[Petty Cash Sheet]]></field>
            <field name="name">Petty Cash Sheet</field>
            <field name="res_model">petty.cash.sheet</field>
            <field name="target">current</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">list,form,pivot,graph</field>
        </record>

    </data>
</odoo>
