<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="res_branch_tree" model="ir.ui.view">
        <field name="name">res.branch.list</field>
        <field name="model">res.branch</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Branch">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="code" />
                <field name="company_id" />
            </list>
        </field>
    </record>

    <record id="res_branch_form" model="ir.ui.view">
        <field name="name">res.branch.form</field>
        <field name="model">res.branch</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Branch">
                <header />
                <sheet>
                    <label for="name" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="header_group">
                        <group>
                            <field name="company_id" />
                            <field name="code" />
                        </group>
                        <group>
                            <field name="company_partner_id" invisible="1" />
                            <field name="partner_id" domain="['|',('id','=',company_partner_id),('parent_id','=',company_partner_id)]" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>