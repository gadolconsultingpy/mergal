<odoo>
    <data>
        <record id="view_move_form" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='ref']" position="before">
                    <field name="sale_document_type_id"
                           options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"
                           invisible="move_type not in ('out_invoice','out_refund') "
                           required=" move_type in ('out_invoice','out_refund') "
                           readonly="state != 'draft' "/>
                    <field name="purchase_document_type_id"
                           options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"
                           invisible="move_type not in ('in_invoice','in_refund') "
                           required=" move_type in ('in_invoice','in_refund') "
                           readonly="state != 'draft' "/>
                    <field name="stamped_id" string="Supplier Stamped"
                           invisible="move_type not in ('in_invoice','in_refund') "
                           domain="[('partner_id','=',partner_id)]" context="{'default_partner_id':partner_id}"/>
                    <field name="stamped_id" string="Company Stamped"
                           readonly="1" force_save="1" options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"
                           invisible="move_type not in ('out_invoice','out_refund') "/>
                </xpath>
                <xpath expr="//field[@name='checked']" position="after">
                    <field name="document_type_id"
                           required="move_type in ('in_invoice','in_refund','out_invoice','out_refund')"/>
                </xpath>
            </field>
        </record>


        <record id="view_invoice_tree" model="ir.ui.view">
            <field name="name">account.move.list</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="multi_edit">1</attribute>
                </xpath>
                <xpath expr="//field[@name='invoice_date_due']" position="after">
                    <field name="sale_document_type_id"
                           column_invisible="context.get('default_move_type') not in ('out_invoice','out_refund') "
                           optional="hide"
                           readonly="0"/>
                    <field name="purchase_document_type_id"
                           column_invisible="context.get('default_move_type') not in ('in_invoice','in_refund') "
                           optional="hide"
                           readonly="0"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>