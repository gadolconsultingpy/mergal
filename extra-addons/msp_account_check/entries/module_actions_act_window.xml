<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <data>
        <!-- ACCOUNT CHECK THIRD -->
        <record id="account_check_third_action" model="ir.actions.act_window">
            <field name="binding_type">action</field>
            <field name="context">{'default_type': 'third', 'search_default_filter_portfolio': '1'}</field>
            <field name="domain">[('type', '=', 'third')]</field>
            <field eval="[(6, 0, [])]" name="groups_id"/>
            <field name="help"><![CDATA[Third Party Check]]></field>
            <field name="name">Third Party Check</field>
            <field name="res_model">account.check</field>
            <field name="target">current</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_id" ref="view_account_check_third_tree"/>
            <field name="view_mode">list,form,pivot,graph</field>
        </record>
