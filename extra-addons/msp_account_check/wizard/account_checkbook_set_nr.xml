<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="account_checkbook_set_nr_form" model="ir.ui.view">
            <field name="name">account.checkbook.set.nr.form</field>
            <field name="model">account.checkbook.set.nr</field>
            <field name="arch" type="xml">
                <form string="Set Next Number">
                    <group>
                        <group>
                            <field name="next_number"/>
                        </group>
                        <group>
                            <field name="checkbook_id" readonly="1" force_save="1"/>
                            <field name="from_number" readonly="1" force_save="1"/>
                            <field name="to_number" readonly="1" force_save="1"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Assign Next Number" name="set_next_nr" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>