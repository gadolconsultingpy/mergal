<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_l10n_latam_identification_type_list" model="ir.ui.view">
            <field name="name">l10n_latam.identification.type.list</field>
            <field name="model">l10n_latam.identification.type</field>
            <field name="inherit_id" ref="l10n_latam_base.view_l10n_latam_identification_type_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list" position="attributes">
                    <attribute name="create">1</attribute>
                    <attribute name="edit">1</attribute>
                    <attribute name="delete">1</attribute>
                </xpath>
                <xpath expr="//field[@name='description']" position="after">
                    <field name="fiscal_code"/>
                </xpath>
            </field>
        </record>

        <record id="identification_type_form" model="ir.ui.view">
            <field name="name">identification_type_form.form</field>
            <field name="model">l10n_latam.identification.type</field>
            <field name="inherit_id" ref="l10n_py.l10n_latam_identification_type_form"></field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_right']" position="inside">
                    <field name="fiscal_code"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>