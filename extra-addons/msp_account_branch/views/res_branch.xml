<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_branch_form" model="ir.ui.view">
            <field name="name">res.branch.form</field>
            <field name="model">res.branch</field>
            <field name="inherit_id" ref="msp_branch.res_branch_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="inside">
                    <notebook>
                        <page string="Dispatch Point" name="dispatch_point_page">
                            <group>
                                <group>
                                    <field name="establishment"/>
                                </group>
                                <group>
                                    <field name="set_default_journal" widget="boolean_toggle"/>
                                    <field name="sequence_by_salesman" widget="boolean_toggle"/>
                                </group>
                            </group>
                            <field name="dispatch_point_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="dispatch_point"/>
                                    <field name="move_type"/>
                                    <field name="journal_id" domain="[('type','=','sale')]"/>
                                    <field name="salesman_id" column_invisible="parent.sequence_by_salesman == False"/>
                                    <field name="sequence_id"/>
                                    <field name="sequence_next_actual" optional="hide"/>
                                    <field name="sequence_use" optional="hide"/>
                                    <field name="sequence_remain" optional="hide"/>
                                    <button name="action_create_sequence"
                                            string="Create Sequence"
                                            type="object"
                                            invisible="sequence_id != False"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
