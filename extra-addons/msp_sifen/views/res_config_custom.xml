<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="l10n_py_res_config_custom_list" model="ir.ui.view">
            <field name="name">res.config.custom.list</field>
            <field name="model">res.config.custom</field>
            <field name="inherit_id" ref="l10n_py_base.res_config_custom_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='company_id']" position="after">
                    <field name="invoice_batch" widget="boolean_toggle"/>
                </xpath>

            </field>
        </record>

        <record id="res_config_custom_form" model="ir.ui.view">
            <field name="name">>res.config.custom.form</field>
            <field name="model">res.config.custom</field>
            <field name="inherit_id" ref="l10n_py_base.res_config_custom_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='edi_email_page']" position="inside">
                    <group name="group_right">
                        <field name="edi_send_mode" widget="radio"/>
                        <field name="edi_missing_email" widget="radio"/>
                        <field name="test_email"/>
                    </group>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page name="sifen_page" string="SIFEN">
                        <group>
                            <group name="group_left">
                                <field name="invoice_batch" widget="boolean_toggle"/>
                                <field name="invoice_batch_limit"/>
                                <field name="invoice_batch_delay"/>
                                <field name="edi_delayed_send_days"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//header" position="inside">
                    <button name="backup_procedures" type="object" string="Backups Procedures" class="btn-primary"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>