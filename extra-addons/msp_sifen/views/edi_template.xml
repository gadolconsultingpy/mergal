<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="edi_template_list_view" model="ir.ui.view">
            <field name="name">edi_template.list</field>
            <field name="model">edi.template</field>
            <field name="arch" type="xml">
                <list string="EDI Template" sample="1">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </list>
            </field>
        </record>

        <record id="edi_template_form_view" model="ir.ui.view">
            <field name="name">edi_template.form</field>
            <field name="model">edi.template</field>
            <field name="arch" type="xml">
                <form string="EDI Template">
                    <header>
                        <button name="test_template" type="object" string="Test" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name"/>
                            </h1>
                        </div>
                        <field name="template" nolabel="1" widget="ace" options="{'mode':'xml'}"/>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="edi_template_search_view" model="ir.ui.view">
            <field name="name">edi.template.search</field>
            <field name="model">edi.template</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="">
                    <field name="name" string="Name"/>
                    <field name="template" string="Template"/>
                </search>
            </field>
        </record>

    </data>
</odoo>