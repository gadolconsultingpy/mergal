<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_partner_form_inherit" model="ir.ui.view">
            <field name="name">res_partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet" position="before">
                    <header>
                        <button name="sifen_procedure" type="object" string="VAT Consult" class="btn-primary"/>
                    </header>
                </xpath>
                <xpath expr="//sheet/div[@name='button_box']" position="inside">
                    <button class="oe_stat_button"
                            name="open_edi_events"
                            icon="fa-files-o"
                            type="object"
                            invisible="edi_event_qty == 0 ">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_value">
                                <field name="edi_event_qty" widget="statinfo" nolabel="1" class="mr4"/>
                            </span>
                            <span class="o_stat_text">Events</span>
                        </div>
                    </button>
                </xpath>
            </field>
        </record>
    </data>
</odoo>