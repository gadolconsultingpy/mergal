<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="edi_event_list_view" model="ir.ui.view">
            <field name="name">edi_event.list</field>
            <field name="model">edi.event</field>
            <field name="arch" type="xml">
                <list string="EDI Event" sample="1">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="create_date"/>
                    <field name="method"/>
                    <field name="url"/>
                    <field name="res_model"/>
                    <field name="res_id"/>
                    <field name="res_name"/>
                    <button name="process" type="object"
                            invisible="state != 'pending' "
                            string="Process"/>
                    <field name="state" widget="badge"
                           decoration-primary="state == 'pending' "
                           decoration-success="state == 'sent' "/>
                </list>
            </field>
        </record>

        <record id="edi_event_form_view" model="ir.ui.view">
            <field name="name">edi_event.form</field>
            <field name="model">edi.event</field>
            <field name="arch" type="xml">
                <form string="EDI Event">
                    <header>
                        <button name="process" type="object" string="Process"
                                invisible="state != 'pending' "
                                class="btn-primary"/>
                        <button name="open_origin" type="object" string="Open Origin"/>
                        <button name="finish" type="object" string="Finish"
                                invisible="state != 'sent' "
                                class="btn-primary"/>
                        <field name="state" widget="statusbar" clickable="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name" readonly="1" force_save="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="url"/>
                                <field name="method"/>
                                <field name="headers"/>
                                <field name="soap_method"/>
                                <field name="request_filename" invisible="1"/>
                            </group>
                            <group>
                                <field name="company_id"/>
                                <field name="create_date"/>
                                <field name="procedure_id"/>
                                <field name="res_model"/>
                                <field name="res_id"/>
                                <field name="res_name"/>
                                <field name="state" widget="badge"
                                       decoration-primary="state == 'pending' "
                                       decoration-success="state == 'sent' "/>
                            </group>
                        </group>
                        <group>
                            <field name="request_content" filename="request_filename"/>
                        </group>
                        <notebook>
                            <page string="Logs">
                                <field name="log_ids" nolabel="1"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter reload_on_attachment="True"/>
                </form>
            </field>
        </record>

        <record id="edi_event_search" model="ir.ui.view">
            <field name="name">edi.event.search</field>
            <field name="model">edi.event</field>
            <field name="arch" type="xml">
                <search string="EDI Event">
                    <field name="res_name" string="Resource Name"/>
                    <field name="res_id" string="Resource Id"/>
                    <field name="res_model" string="Resource Model"/>
                    <group expand="1" string="Group By">
                        <filter name="group_state" string="State" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo>