<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="ir_cron_list_inherit" model="ir.ui.view">
            <field name="name">ir_cron.form</field>
            <field name="model">ir.cron</field>
            <field name="inherit_id" ref="base.ir_cron_view_tree"/>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='active']" position="attributes">
                    <attribute name="widget">boolean_toggle</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>