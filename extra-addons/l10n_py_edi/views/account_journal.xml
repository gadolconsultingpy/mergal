<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="view_account_journal_form" model="ir.ui.view">
        <field name="name">account.journal.form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="account.view_account_journal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page name="edi_page" string="Electronic Invoicing">
                    <group name="extra_group_left">
                        <group>
                            <field name="establishment"/>
                        </group>
                        <group>
                            <field name="invoice_type_id" required="type == 'sale' "/>
                            <field name="reversal_journal_id" domain="[('type','=','sale')]"/>
                        </group>
                    </group>
                    <group>
                        <field name="issuance_point_ids" nolabel="1">
                            <list editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="issuance_point"/>
                                <field name="sequence_id"/>
                                <field name="sequence_next_actual" optional="hide"/>
                                <field name="sequence_use" optional="hide"/>
                                <field name="sequence_remain" optional="hide"/>
                                <button name="action_create_sequence"
                                        string="Create Sequence"
                                        type="object"
                                        invisible="sequence_id != False"/>
                            </list>
                        </field>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>