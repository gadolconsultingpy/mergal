<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_edi_transport_mode_tree" model="ir.ui.view">
        <field name="name">edi.transport.mode.tree</field>
        <field name="model">edi.transport.mode</field>
        <field name="arch" type="xml">
            <list string="Transport Modes">
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <record id="view_edi_transport_mode_form" model="ir.ui.view">
        <field name="name">edi.transport.mode.form</field>
        <field name="model">edi.transport.mode</field>
        <field name="arch" type="xml">
            <form string="Transport Mode">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>