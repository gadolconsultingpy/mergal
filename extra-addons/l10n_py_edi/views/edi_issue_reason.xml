<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="edi_issue_reason_form_view" model="ir.ui.view">
            <field name="name">edi.issue.reason.form</field>
            <field name="model">edi.issue.reason</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Issue Reason">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Name" />
                            </h1>
                        </div>
                        <group>
                            <field name="code" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="edi_issue_reason_tree_view" model="ir.ui.view">
            <field name="name">edi.issue.reason.list</field>
            <field name="model">edi.issue.reason</field>
            <field name="arch" type="xml">
                <list string="Issue Reason">
                    <field name="name" />
                    <field name="code" />
                </list>
            </field>
        </record>

    </data>
</odoo>