<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="edi_document_cancel_tree" model="ir.ui.view">
            <field name="name">edi.document.cancel.list</field>
            <field name="model">edi.document.cancel</field>
            <field name="arch" type="xml">
                <list string="Invoice Cancellation" sample="1">
                    <field name="edi_document_type"/>
                    <field name="edi_document_datetime"/>
                    <field name="invoice_id"/>
                    <field name="picking_id"/>
                    <field name="reason"/>
                    <field name="state" widget="badge" decoration-primary="state == 'draft' " decoration-info="state == 'confirm' "
                           decoration-success="state == 'sent' "/>
                </list>
            </field>
        </record>

        <record id="edi_document_cancel_form" model="ir.ui.view">
            <field name="name">edi.document.cancel.form</field>
            <field name="model">edi.document.cancel</field>
            <field name="arch" type="xml">
                <form string="Invalid Invoices">
                    <header>
                        <field name="state" widget="statusbar" clickable="0"/>
                        <button name="action_confirm" type="object" string="Confirm" class="btn-primary" invisible="state != 'draft' "/>
                        <button name="send" type="object" string="Send" class="btn-primary" invisible="state != 'confirm' "/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">

                        </div>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Name" force_save="1" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group name="left_group">
                                <field name="edi_document_datetime"
                                       readonly="state != 'draft' "/>
                                <field name="edi_document_type"
                                       readonly="state != 'draft' "
                                       domain="[('code','in',['1','7','5'])]"/>
                                <field name="edi_document_type_code"
                                       invisible="1"/>
                                <field name="invoice_id"
                                       string="Invoice"
                                       readonly="state != 'draft' "
                                       domain="[('move_type','=','out_invoice'),('state','=','posted')]"
                                       invisible="edi_document_type_code != '1' "/>
                                <field name="invoice_id"
                                       string="Credit Note"
                                       readonly="state != 'draft' "
                                       domain="[('move_type','=','out_refund'),('state','=','posted')]"
                                       invisible="edi_document_type_code != '5' "/>
                                <field name="picking_id"
                                       readonly="state != 'draft' "
                                       domain="[('picking_type_id.code','=','outgoing'),('state','=','done')]"
                                       invisible="edi_document_type_code != '7'"/>

                                <field name="reason" readonly="state != 'draft' "/>
                            </group>
                            <group name="right_group">
                                <field name="company_id" readonly="1" force_save="1"/>

                            </group>
                        </group>
                    </sheet>
                    <chatter reload_on_attachment="True"/>
                </form>
            </field>
        </record>

    </data>
</odoo>