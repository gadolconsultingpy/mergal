<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="edi_establishment_tree" model="ir.ui.view">
        <field name="name">edi.establishment.list</field>
        <field name="model">edi.establishment</field>
        <field name="type">list</field>
        <field name="arch" type="xml">
            <list string="Establishment">
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="code" />
                <field name="company_id" />
            </list>
        </field>
    </record>

    <record id="edi_establishment_form" model="ir.ui.view">
        <field name="name">edi.establishment.form</field>
        <field name="model">edi.establishment</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Branch">
                <header />
                <sheet>
                    <label for="name" />
                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group name="header_group">
                        <group>
                            <field name="company_id" />
                            <field name="code" />
                        </group>
                        <group>
                            <field name="company_partner_id" invisible="1" />
                            <field name="partner_id" domain="['|',('id','=',company_partner_id),('parent_id','=',company_partner_id)]" />
                        </group>
                    </group>
                    <notebook>
                        <page string="Dispatch Point" name="dispatch_point_page">
                            <group>
                                <group>
                                    <field name="establishment"/>
                                </group>
                                <group>
                                    <field name="set_default_journal" widget="boolean_toggle"/>
                                    <field name="sequence_by_salesman" widget="boolean_toggle"/>
                                </group>
                            </group>
                            <field name="issuance_point_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="dispatch_point"/>
                                    <field name="move_type"/>
                                    <field name="journal_id" domain="[('type','=','sale')]"/>
                                    <field name="salesman_id" column_invisible="parent.sequence_by_salesman == False"/>
                                    <field name="sequence_id"/>
                                    <field name="sequence_next_actual" optional="hide"/>
                                    <field name="sequence_use" optional="hide"/>
                                    <field name="sequence_remain" optional="hide"/>
                                    <button name="action_create_sequence"
                                            string="Create Sequence"
                                            type="object"
                                            invisible="sequence_id != False"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>