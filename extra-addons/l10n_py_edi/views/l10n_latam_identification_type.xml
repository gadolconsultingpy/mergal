<odoo>
    <data>
        <record id="identification_type_tree" model="ir.ui.view">
            <field name="name">l10n_latam.identification.type.form</field>
            <field name="model">l10n_latam.identification.type</field>
            <field name="inherit_id" ref="l10n_latam_base.view_l10n_latam_identification_type_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="after">
                    <field name="edi_code"/>
                    <field name="edi_name"/>
                </xpath>
            </field>
        </record>

        <record id="identification_type_form" model="ir.ui.view">
            <field name="name">l10n_latam.identification.type.form</field>
            <field name="model">l10n_latam.identification.type</field>
            <field name="inherit_id" ref="l10n_py.l10n_latam_identification_type_form"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group_right']" position="inside">
                    <field name="edi_code"/>
                    <field name="edi_name"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>