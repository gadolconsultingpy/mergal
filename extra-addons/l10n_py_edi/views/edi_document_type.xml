<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="edi_document_type_form_view" model="ir.ui.view">
            <field name="name">edi.document.type.form</field>
            <field name="model">edi.document.type</field>
            <field name="arch" type="xml">
                <form string="Document Type">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" />
                            <h1>
                                <field name="name" placeholder="Description" />
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code" />
                            </group>
                            <group>
                                <field name="note" placeholder="Additional Notes" />
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="edi_document_type_tree_view" model="ir.ui.view">
            <field name="name">edi.document.type.list</field>
            <field name="model">edi.document.type</field>
            <field name="arch" type="xml">
                <list string="Document Type">
                    <field name="name" />
                    <field name="code" />
                </list>
            </field>
        </record>

    </data>
</odoo>