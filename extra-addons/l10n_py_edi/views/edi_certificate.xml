<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>

        <record id="certificate_tree_view" model="ir.ui.view">
            <field name="name">certificate.list</field>
            <field name="model">edi.certificate</field>
            <field name="arch" type="xml">
                <list string="Certificate">
                    <field name="name"/>
                    <field name="signature_filename"/>
                    <field name="cert_expiration"/>
                    <field name="subject_serial_number"/>
                    <field name="user_id"/>
                    <field name="company_id" groups="base.group_multi_company"/>
                </list>
            </field>
        </record>

        <record id="certificate_form_view" model="ir.ui.view">
            <field name="name">certificate.form</field>
            <field name="model">edi.certificate</field>
            <field name="arch" type="xml">
                <form string="Certificate">
                    <header>
                        <button name="test_certificate" string="Test Certificate" type="object"/>
                        <button name="open_certificate" string="Open Certificate" type="object" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="signature_filename" invisible="1"/>
                                <field name="signature_key_file" required="1" filename="signature_filename"/>
                            </group>
                            <group>
                                <field name="pem_filename" invisible="1"/>
                                <field name="pem_file" required="1" filename="pem_filename"/>
                            </group>
                        </group>
                        <notebook>
                            <page name="general_page" string="General">
                                <group>
                                    <field name="signature_pass_phrase" password="True" required="1"/>
                                    <field name="cert_expiration"/>
                                </group>
                                <group>
                                    <group>
                                        <field name="subject_serial_number"/>
                                        <field name="user_id"/>
                                        <field name="company_id" groups="base.group_multi_company"/>
                                    </group>
                                </group>
                            </page>
                            <page name="public_bytes_page" string="Public Bytes">
                                <group>
                                    <field name="cert_public_bytes" readonly="1" force_save="1" widget="text"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>