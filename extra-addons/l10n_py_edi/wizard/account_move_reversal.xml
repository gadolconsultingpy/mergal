<odoo>
    <!-- Inherit Form View to Modify it -->
    <record id="view_account_move_reversal" model="ir.ui.view">
        <field name="name">account.move.reversal.form</field>
        <field name="model">account.move.reversal</field>
        <field name="inherit_id" ref="account.view_account_move_reversal"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reason']" position="before">
                <field name="issue_reason_id" options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"/>
            </xpath>
            <xpath expr="//field[@name='journal_id']" position="after">
                <field name="invoice_payment_term_id" required="1"/>
            </xpath>
            <xpath expr="//field[@name='reason']" position="replace">
                <field name="reason" string="Reason Text"/>
            </xpath>
            <!--
            <xpath expr="//field[@name='journal_id']" position="attributes">
                <attribute name="domain">[('id', 'in', available)]</attribute>
            </xpath>
            -->
        </field>
    </record>
</odoo>