<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_company_activity_list_view" model="ir.ui.view">
            <field name="name">res.company.activity.list</field>
            <field name="model">res.company.activity</field>
            <field name="arch" type="xml">
                <list string="Company Activity">
                    <field name="name"/>
                    <field name="code"/>
                </list>
            </field>
        </record>

        <record id="res_company_activity_form_view" model="ir.ui.view">
            <field name="name">res.company.activity.form</field>
            <field name="model">res.company.activity</field>
            <field name="arch" type="xml">
                <form string="Company Activity">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="Activity Description"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_company_activity_search_view" model="ir.ui.view">
            <field name="name">res.company.activity.search</field>
            <field name="model">res.company.activity</field>
            <field name="arch" type="xml">
                <search string="Company Activity">
                    <field name="name"/>
                    <field name="code"/>
                </search>
            </field>
        </record>

    </data>
</odoo>