<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="py_address_view_partner_form" model="ir.ui.view">
        <field name="name">py.address.res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <form>
                <div>
                    <field name="type" invisible="1"/>
                    <field name="parent_id" invisible="1"/>
                    <field name="street" invisible="1"/>
                    <field name="street_name" placeholder="Street..." class="o_address_street"
                           readonly="type == 'contact' and parent_id "/>
                    <div class="oe_row d-flex">
                        <field name="street_number" placeholder="Number" class="o_address_street"
                               readonly="type == 'contact' and parent_id "/>
                        <field name="street2" placeholder="Street 2..." class="o_address_street"
                               readonly="type == 'contact' and parent_id "/>
                    </div>
                    <div class="oe_row d-flex">
                        <field name="country_id" placeholder="Country" class="o_address_country"
                               options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                               readonly="type == 'contact' and parent_id "/>
                        <field name="state_id" class="o_address_state" placeholder="State"
                               domain="[('country_id','=',country_id)]"
                               readonly="type == 'contact' and parent_id "
                               options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"
                               context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"
                               string="Department"/>
                    </div>
                    <div class="oe_row d-flex">
                        <field name="district_id" placeholder="District"
                               domain="[('state_id','=',state_id)]"
                               options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"
                               readonly="type == 'contact' and parent_id "/>
                        <field name="location_id" placeholder="City or Location"
                               readonly="type == 'contact' and parent_id "
                               options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"
                               domain="[('district_id','=',district_id)]"/>
                    </div>
                    <field name="neighborhood_id" placeholder="Neighborhood"
                           readonly="type == 'contact' and parent_id "
                           options="{'no_create':True, 'no_create_edit':True, 'no_open':True}"
                           domain="[('location_id','=',location_id)]"/>
                    <field name="city" invisible="1"/>
                    <field name="zip"
                           readonly="type == 'contact' and parent_id "/>
                </div>
            </form>
        </field>
    </record>

    <record id="base.py" model="res.country">
        <field name="address_view_id" ref="l10n_py.py_address_view_partner_form"/>
    </record>

    <record id="res_partner_address_view_tree" model="ir.ui.view">
        <field name="name">res_partner_address_view_tree</field>
        <field name="model">res.partner</field>
        <field name="priority">26</field>
        <field name="arch" type="xml">
            <list string="Partner Address">
                <field name="display_name"/>
                <field name="street" string="Old Street" optional="hide"/>
                <field name="street_name" optional="show"/>
                <field name="street2" string="Old Street 2" optional="hide"/>
                <field name="street_number"/>
                <field name="country_id" optional="show"/>
                <field name="state_id" optional="show"/>
                <field name="district_id" optional="show"/>
                <field name="location_id" optional="show"/>
                <field name="neighborhood_id" optional="show"/>
            </list>
        </field>
    </record>
</odoo>