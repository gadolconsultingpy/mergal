<odoo>
    <data noupdate="1">
        <!-- Currency Rates from DNIT -->
        <record id="currency_update_from_dnit" model="ir.cron">
            <field name="name">DNIT: Update Currency Rates</field>
            <field name="model_id" ref="model_res_currency"/>
            <field name="state">code</field>
            <field name="code">model._cron_dnit_currency_rate(offset=-30)</field>
            <field name='interval_number'>1</field>
            <field name='interval_type'>days</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>