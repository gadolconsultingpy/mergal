<odoo>
    <data noupdate="1">
        <!-- SALES -->
        <record id="py_sale_tax_10" model="account.tax">
            <field name="name">IVA 10%</field>
            <field name="description">IVA 10%</field>
            <field name="tax_group_id" ref="l10n_py.tax_group_10"/>
            <field name="type_tax_use">sale</field>
            <field name="amount">10</field>
            <field name="price_include">1</field>
            <field name="include_base_amount">1</field>
            <field name="country_id" ref="base.py"/>
            <field name="invoice_repartition_line_ids"
                   eval="[(5,0,0),(0,0,{'repartition_type':'base'}), (0,0,{'repartition_type':'tax','factor_percent':100,'account_id':ref('account.1_tax_received')}),]"/>
            <field name="refund_repartition_line_ids"
                   eval="[(5,0,0),(0,0,{'repartition_type':'base'}), (0,0,{'repartition_type':'tax','factor_percent':100,'account_id':ref('account.1_tax_received')}),]"/>
        </record>

        <record id="py_sale_tax_5" model="account.tax">
            <field name="name">IVA 5%</field>
