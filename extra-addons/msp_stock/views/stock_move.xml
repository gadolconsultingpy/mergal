<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_stock_move_operations" model="ir.ui.view">
        <field name="name">stock.move.form</field>
        <field name="model">stock.move</field>
        <field name="inherit_id" ref="stock.view_stock_move_operations"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//widget[@name='import_lots']" position="after">
                <field name="display_select_lot" invisible="1"/>
                <button name="select_lots" string="Select Serial Numbers" type="object" class="btn btn-link btn-group"
                        invisible="not display_select_lot"/>
            </xpath>
        </field>
    </record>
</odoo>