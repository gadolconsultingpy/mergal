<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_account_payment_form" model="ir.ui.view">
        <field name="name">account.payment.form</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_group']" position="after">
                <notebook>
                    <page name="general_page" string="General">
                        <group>
                            <group name="left_group">
                                <field name="payment_origin" readonly="state != 'draft'"/>
                            </group>
                            <group name="right_group">

                            </group>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>

    <record id="view_account_payment_search" model="ir.ui.view">
        <field name="name">account.payment.search</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_search"/>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='company']" position="after">
                <filter string="Payment Origin" name="payment_origin" context="{'group_by': 'payment_origin'}"/>
            </xpath>
        </field>
    </record>

</odoo>